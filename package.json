{
  "name": "@form8ion/hapi-scaffolder",
  "description": "opinionated scaffolder for hapi.js projects",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "form8ion/hapi-scaffolder",
  "bugs": "https://github.com/form8ion/hapi-scaffolder/issues",
  "homepage": "https://npm.im/@form8ion/hapi-scaffolder",
  "main": "./lib/index.js",
  "module": "lib/index.mjs",
  "sideEffects": false,
  "scripts": {
    "pretest": "run-s build",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:js": "eslint . --cache",
    "lint:gherkin": "gherkin-lint",
    "lint:md": "remark . --frail",
    "lint:sensitive": "ban",
    "lint:peer": "npm ls >/dev/null",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any vitest run",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "test:integration:base": "DEBUG=any cucumber-js test/integration --profile base",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "prepare": "husky install",
    "lint:publish": "publint --strict",
    "lint:js:fix": "run-s 'lint:js -- --fix'",
    "lint:lockfile": "lockfile-lint"
  },
  "files": [
    "lib/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "npm@11.2.0+sha512.3dc9c50ba813a3d54393155a435fe66404b72685ab0e3008f9ae9ed8d81f6104860f07ed2656dd5748c1322d95f3140fa9b19c59a6bba7750fd12285f81866da",
  "dependencies": {
    "@form8ion/cucumber-scaffolder": "^2.1.0",
    "deepmerge": "^4.2.2",
    "mustache": "^4.0.0"
  },
  "devDependencies": {
    "@babel/register": "7.25.9",
    "@cucumber/cucumber": "11.2.0",
    "@form8ion/babel-preset": "1.6.143",
    "@form8ion/commitlint-config": "2.0.5",
    "@form8ion/core": "4.8.0",
    "@form8ion/eslint-config": "7.0.12",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/javascript": "14.3.1",
    "@form8ion/remark-lint-preset": "6.0.7",
    "@travi/any": "3.1.2",
    "ban-sensitive-files": "1.10.7",
    "bdd-stdin": "0.2.0",
    "c8": "10.1.3",
    "chai": "4.5.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.4",
    "husky": "9.1.7",
    "lockfile-lint": "4.14.0",
    "mock-fs": "5.5.0",
    "npm-run-all2": "7.0.2",
    "publint": "0.3.8",
    "remark-cli": "12.0.1",
    "rimraf": "6.0.1",
    "rollup": "4.35.0",
    "rollup-plugin-auto-external": "2.0.0",
    "vitest": "3.0.8",
    "vitest-when": "0.6.0"
  },
  "peerDependencies": {
    "@form8ion/javascript": ">=2.0.0"
  }
}
