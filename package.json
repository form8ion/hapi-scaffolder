{
  "name": "@form8ion/hapi-scaffolder",
  "description": "opinionated scaffolder for hapi.js projects",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "sideEffects": false,
  "files": [
    "lib/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "form8ion/hapi-scaffolder",
  "bugs": "https://github.com/form8ion/hapi-scaffolder/issues",
  "homepage": "https://npm.im/@form8ion/hapi-scaffolder",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "lint:sensitive": "ban",
    "lint:travis": "travis-lint .travis.yml",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "nyc run-s test:unit:base",
    "test:unit:base": "DEBUG=any mocha src/**/*-test.js",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "devDependencies": {
    "@babel/register": "7.25.7",
    "@form8ion/babel-preset": "1.6.137",
    "@form8ion/commitlint-config": "1.0.76",
    "@form8ion/eslint-config": "7.0.12",
    "@form8ion/eslint-config-mocha": "3.0.6",
    "@form8ion/remark-lint-preset": "6.0.4",
    "@travi/any": "3.1.2",
    "@travi/javascript-scaffolder": "14.14.7",
    "ban-sensitive-files": "1.10.6",
    "chai": "5.1.1",
    "codecov": "3.8.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.6",
    "mocha": "10.7.3",
    "npm-run-all2": "6.2.3",
    "nyc": "17.1.0",
    "remark-cli": "12.0.1",
    "rimraf": "6.0.1",
    "rollup": "4.24.0",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "19.0.2",
    "travis-lint": "1.0.0"
  },
  "dependencies": {
    "make-dir": "^5.0.0",
    "mustache": "^4.0.0"
  },
  "peerDependencies": {
    "@travi/javascript-scaffolder": "^7.5.0 || ^12.0.0 || ^13.0.0 || ^14.0.0"
  }
}
